#Initfile for consul-alerts
#Managed by puppet
#Do not modify by hand

[Unit]
Description=Consul Alerts
Wants=basic.target
After=basic.target network.target

[Service]
User=<%= @user %>
Group=<%= @group %>
ExecStart=<%= @binary_path %>/consul-alerts start --alert-addr=<%= @alert_addr %> --consul-addr=<%= @consul_url %> --consul-dc=<%= @data_center %> <% if @watch_events -%>--watch-events<% end -%> <% if @watch_checks -%>--watch-checks<% end -%> 
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target
